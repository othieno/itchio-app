/*
 * The default background for all items.
 */
*,
QMainWindow,
QDialog
{
    color:#FFF;
    background:#333;
/*
    background:#7A6B6E;
*/
}
/*
 * The main window.
 */
QMainWindow
{
}
/*
 * Dialogs.
 */
QDialog
{
}
/*
 * The custom titlebar for frameless windows/dialogs.
 */
#TitleBar
{
    background:rgba(0, 0, 0, 0.5);
}
#TitleBar > *
{
    color:#FFF;
    background:transparent;
    margin:0 0 0.25em 0;
}
#TitleBar > #icon
{
	margin:0 0.1em 0.2em 0.2em;
}
#TitleBar > #title
{
    font:700 9pt Lato;
}
#TitleBar > #settingsButton
{
    height:1em;
    margin:0;
}
/*
 * Scrollbars.
 */
QScrollBar,
QScrollBar::add-line,
QScrollBar::sub-line
{
	border:none;
}
QScrollBar
{
	width:0.4em;
}
QScrollBar::add-line,
QScrollBar::sub-line
{
	background:none;
}
QScrollBar::handle
{
	background:rgba(255, 255, 255, 0.2);
}




#centralWidget
{
}
#centralWidgetContent
{
    border:none;
}
#centralWidgetContent > QTabBar
{
    font:400 20pt Raleway;
    text-transform:uppercase;
}
QTabWidget#centralWidgetContent > QTabBar::tab
{
    color:#888;
    margin:1em 1.5em 1em 0.5em;
    border:none;
}
QTabWidget#centralWidgetContent > QTabBar::tab:selected
{
    color:#FFF;
}
/*
 * footer
 */
#footer
{
    font:900 8pt Lato;
}


/*
 * The AuthenticationView.
 */
itchio--AuthenticationView
{
}
itchio--AuthenticationView > QLineEdit,
itchio--AuthenticationView > QPushButton
{
    height:2em;
}
itchio--AuthenticationView > QLineEdit
{
    font:400 12pt Lato;
    color:#777;
    background:transparent;
}
itchio--AuthenticationView > QLineEdit:focus
{
    color:#FFF;
}
itchio--AuthenticationView > #authenticateButton
{
    font:900 14pt Raleway;
    text-transform:uppercase;
    border:0;
    border-radius:2px;
    color:#FA5C5C;
    background:rgba(0, 0, 0, 0.5);
    margin:0.5em 0 0 0;
}
itchio--AuthenticationView > #authenticateButton:!enabled
{
    color:rgba(255, 255, 255, 0.1);
    background:rgba(0, 0, 0, 0.3);
}
itchio--AuthenticationView > #authenticateButton:focus:enabled,
itchio--AuthenticationView > #authenticateButton:hover:enabled
{
    color:#333;
    background:#FA5C5C;
    outline:none;
}
itchio--AuthenticationView > #inputSeparator
{
    background:#333;
}
itchio--AuthenticationView > #statusMessage
{
    font:400 10pt Lato;
    margin:0.5em 0 0 0;
    color:rgba(255, 255, 255, 0.4);
}
/*
 * The LibraryView.
 */
#contentTitles
{
    font:400 14pt Lato;
    margin:0 0 0 0.25em;
    border-right:1px solid rgba(255, 255, 255, 0.1);
}
#contentTitles::item
{
    color:#777;
    background:transparent;
}
#contentTitles::item:selected
{
    color:#ABAFE5;
}
#contentTitles::item:hover:!selected
{
    color:#6A6EA9;
}
#contentDetails
{
}
